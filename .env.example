# StorySync Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys
# =============================================================================

# OpenAI (for Whisper transcription)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic (for story analysis)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Video Generation APIs (configure at least one)
# Option 1: fal.ai (RECOMMENDED - single key for multiple models)
# Get your key at https://fal.ai/dashboard/keys
FAL_KEY=your-fal-key-here

# Option 2: Direct API keys (if not using fal.ai)
KLING_API_KEY=your-kling-key-here
MINIMAX_API_KEY=your-minimax-key-here
RUNWAY_API_KEY=your-runway-key-here

# =============================================================================
# Video Generation Settings
# =============================================================================

# Default video model: fal-kling, fal-minimax, fal-veo3, kling, minimax, or runway
DEFAULT_VIDEO_MODEL=fal-kling

# Video quality: draft, standard, or premium
DEFAULT_VIDEO_QUALITY=standard

# Max parallel video generations
MAX_PARALLEL_GENERATIONS=3

# =============================================================================
# Storage (Phase 3 - can leave blank for MVP)
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-2
S3_BUCKET_NAME=storysync-media

# =============================================================================
# Database (Phase 3 - can leave blank for MVP)
# =============================================================================

DATABASE_URL=postgresql://user:password@localhost:5432/storysync

# =============================================================================
# Redis (Phase 3 - can leave blank for MVP)
# =============================================================================

REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Temporary file directory
TEMP_DIR=/tmp/storysync

# Output directory for generated videos
OUTPUT_DIR=./output
